<% content_for(:title){"멤버 관리"} %>
<p><%= flash[:notice] %></p>
<p><%= flash[:error] %></p>
<%= link_to image_tag('admin/add-icon.gif')+"새 멤버", new_admin_member_path %>
<div class="table">
	<img src="/images/admin/bg-th-left.gif" width="8" height="7" alt="" class="left" />
	<img src="/images/admin/bg-th-right.gif" width="7" height="7" alt="" class="right" />
<table class="listing" cellpadding="0" cellspacing="0">
  <tr>
    <th class="first">이름</th>
    <th>태그</th>
    <th>수정</th>
    <th class="last">삭제</th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= link_to member.name, edit_admin_member_path(member) %></td>
    <td><%= member.tags.to_a.join(', ') || '' %></td>
    <td><%= link_to image_tag('admin/edit-icon.gif'), edit_admin_member_path(member) %></td>
    <td><%= link_to image_tag('admin/hr.gif'), admin_member_url(member), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<div style="clear:both"></div>
<%= link_to image_tag('admin/add-icon.gif')+"새 멤버", new_admin_member_path %>
