<header>
  <h1>Projects</h1>
</header>
<%= render :partial => 'layouts/navigation', :locals => {:cur => 'projects'} %>
<article>
  <ul id="project_list">
  <% @projects.each do |project| %>
    <li id="project_<%= project.id%>" data-id="<%= project.id %>" class="project">
      <%= image_tag project.screenshots.first.image.url(:middle), {'data-id' => project.id} %>
      <span class="name"><%= project.name %></span>
      <span class="subtitle"><%= project.subtitle %></span>
    </li>
  <% end %>
  </ul>
</article>
